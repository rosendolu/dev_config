{
  "workbench.editor.titleScrollbarSizing": "large",
  "search.quickOpen.history.filterSortOrder": "recency",
  "editor.tokenColorCustomizations": "enabled",

  "editor.minimap.size": "fit",
  "editor.minimap.enabled": true,
  // vscode config
  "files.associations": {
    "*.cjson": "jsonc",
    "*.wxss": "css",
    "*.wxs": "javascript",
    "*.wpy": "vue",
    "*.vue": "vue",
    ".prettierrc.js": "javascript",
    "*.sh": "shellscript"
  },
  // "terminal.integrated.shell.windows": "C:\\Windows\\System32\\WindowsPowerShell\\v1.0\\powershell.exe",
  // "terminal.integrated.shell.windows": "C:\\Windows\\System32\\wsl.exe",
  "editor.fontWeight": "600",
  "workbench.colorTheme": "One Dark Pro",
  // "workbench.colorTheme": "Monokai",
  // "workbench.colorTheme": "Quiet Light",
  // "workbench.colorTheme": "Abyss",
  "editor.selectionHighlight": true,
  "editor.roundedSelection": true,
  "editor.tabSize": 2,
  "editor.detectIndentation": false,
  "extensions.autoCheckUpdates": true,
  "extensions.autoUpdate": true,
  "extensions.showRecommendationsOnlyOnDemand": true,

  // bracket pair colorizer
  "bracketPairColorizer.highlightActiveScope": true,
  "bracketPairColorizer.showBracketsInGutter": false,
  // "bracketPairColorizer.showBracketsInRuler":true,
  // "bracketPairColorizer.rulerPosition":"Right",
  "bracketPairColorizer.scopeLineCSS": [
    "borderStyle : solid",
    "borderWidth : 2px",
    "borderColor : {color}; opacity: 1"
  ],
  "bracketPairColorizer.activeScopeCSS": [
    "borderStyle : solid",
    "borderWidth : 1px",
    // "backgroundColor : {color}",
    "borderColor : {color}; opacity: 1"
  ],
  "editor.matchBrackets": "never", // 关闭 vscode 默认匹配

  // TODO Highlight
  "todohighlight.isEnable": true,
  "todohighlight.isCaseSensitive": true,
  "todohighlight.keywords": [
    "DEBUG:R",
    "REVIEW:R",
    "FIXME:R",
    {
      "text": "NOTE:R",
      "color": "#ff0000",
      "backgroundColor": "yellow",
      "overviewRulerColor": "grey"
    },
    {
      "text": "HACK:R",
      "color": "#000",
      "isWholeLine": false
    },
    {
      "text": "TODO:R",
      "color": "red",
      "border": "1px solid red",
      "borderRadius": "2px", //NOTE: using borderRadius along with `border` or you will see nothing change
      "backgroundColor": "rgba(0,0,0,.2)"
      //other styling properties goes here ...
    }
  ],
  "todohighlight.defaultStyle": {
    "color": "red",
    "backgroundColor": "#ffab00",
    // "overviewRulerColor": "green",
    "cursor": "pointer"
    // "border": "1px solid #eee",
    // "borderRadius": "2px",
    // "isWholeLine": false,
  },
  "todohighlight.include": [
    "**/*.js",
    "**/*.md",
    "**/*.vue",
    "**/*.jsx",
    "**/*.ts",
    "**/*.tsx",
    "**/*.html",
    "**/*.php",
    "**/*.css",
    "**/*.scss"
  ],
  "todohighlight.exclude": [
    "**/node_modules/**",
    "**/bower_components/**",
    "**/dist/**",
    "**/build/**",
    "**/.vscode/**",
    "**/.github/**",
    "**/_output/**",
    "**/*.min.*",
    "**/*.tmp.*",
    "**/*.map",
    "**/.next/**"
  ],
  "todohighlight.maxFilesForSearch": 5120,
  "todohighlight.toggleURI": false,

  // npm  intellisense

  "npm-intellisense.scanDevDependencies": true, // scan devDependencies
  "npm-intellisense.showBuildInLibs": true, // show build in libs
  // "npm-intellisense.recursivePackageJsonLookup": true, //

  // prettier
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[javascript]": {
    // "editor.formatOnSave":false,
    // "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "prettier.trailingComma": "none",
  "prettier.semi": true,
  "prettier.singleQuote": true,
  "prettier.tabWidth": 2,
  //   "prettier.trailingComma": "es5",
  "prettier.vueIndentScriptAndStyle": false,

  // eslint
  "eslint.format.enable": true, // format
  "eslint.codeActionsOnSave.mode": "all",

  "eslint.options": {},
  "eslint.codeAction.showDocumentation": {
    "enable": true
  },
  "editor.codeActionsOnSave": {
    // auto fix on save
    "source.fixAll": true
    // "source.fixAll.eslint": false
  },

  //   "eslint.validate": [
  //     "javascriptreact",
  //     "javascript",
  //     {
  //       "language": "vue",
  //       "autoFix": true
  //     },
  //     "html",
  //     {
  //       "language": "html",
  //       "autoFix": true
  //     }
  //   ],
  "node_require.insertAtCursor": true,
  "window.zoomLevel": 0,
  "typescript.tsc.autoDetect": "off",
  "prettier.endOfLine": "lf",

  "editor.fontSize": 16,
  "editor.multiCursorModifier": "alt",
  "workbench.startupEditor": "newUntitledFile",
  "emmet.includeLanguages": {
    "wxml": "html"
  },
  "minapp-vscode.disableAutoConfig": true,
  // "terminal.external.windowsExec": "C:\\Windows\\System32\\wsl.exe",
  "gitlens.views.lineHistory.enabled": false,
  "diffEditor.renderSideBySide": true,
  "css.lint.unknownProperties": "error",
  "files.eol": "\n",
  "git.autofetch": true,
  // "css.lint.validProperties": ["lines","item-selected-color","item-color","item-size"]
  "workbench.editor.scrollToSwitchTabs": true,
  // "window.title": "${dirty}${activeEditorShort}${separator}${rootName}${separator}${appName}"
  // "window.title": "${activeEditorMedium}$===> {activeFolderShort}/${activeEditorShort}",
  "window.title": "${rootName} > ${activeFolderShort} > ${activeEditorShort}",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "workbench.sideBar.location": "left",
  "editor.accessibilitySupport": "off",
  "breadcrumbs.enabled": true,
  "editor.renderLineHighlight": "all",
  "workbench.iconTheme": "vscode-icons"
}
